container_commands:

  01-drush-setup:
    command: /tmp/drush-setup.sh
    leader_only: true
    ignoreErrors: true

  02-rm-drush-setup:
    command: rm -f /tmp/drush-setup.sh

  03-drush-profile:
    command: /etc/profile.d/drush.sh
    leader_only: true
    ignoreErrors: true

  04-drush-cc-all:
    command: /opt/drush/drush -r /var/app/ondeck cache:rebuild
    ignoreErrors: true
