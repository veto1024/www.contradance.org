/**
 * Implements hook_page_attachments_alter().
 */
function ccd_bs_page_attachments_alter(&$attachments) {
  if (\Drupal::service('path.matcher')->isFrontPage()) {
    $attachments['#attached']['library'][] = 'ccd_bs/slide.js';
  }
}
